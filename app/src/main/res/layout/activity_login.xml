<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".views.Login">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_all_white"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        />
    <proff.freelancer.sherif.hagzapp.CustomFonts.TextViewFont
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:text="تسجيل دخول"/>
    <proff.freelancer.sherif.hagzapp.CustomFonts.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ffffff"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="الايميل"/>
    <proff.freelancer.sherif.hagzapp.CustomFonts.EditeTextFont
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/round_gray"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:drawableEnd="@drawable/mail_blue"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:drawableRight="@drawable/mail_blue" />
    <proff.freelancer.sherif.hagzapp.CustomFonts.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#ffffff"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:text="كلمة السر"/>
    <proff.freelancer.sherif.hagzapp.CustomFonts.EditeTextFont
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:background="@drawable/round_gray"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />
    <proff.freelancer.sherif.hagzapp.CustomFonts.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="هل نسيت كلمة السر"/>

    <proff.freelancer.sherif.hagzapp.CustomFonts.ButtonFont
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="دخول"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:background="@drawable/round_round_dark"/>

</LinearLayout>